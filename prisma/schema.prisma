model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Item {
  ID               Int       @id
  PurchaseItem     PurchaseItem @relation(fields: [PurchaseItemID], references: [ID])
  PurchaseItemID   Int
  FulfillmentRecordID   Int?
  FulfillmentRecord     FulfillmentRecord? @relation(fields: [FulfillmentRecordID], references: [ID])
  ProductID        String
  ProductVariantID String
  ProductHandle    String
  ProductTitle  String
  ProductImage  String
  ProductAlt    String
  SerialNumber     String
  Status ItemStatus @default(Available)
}

enum ItemStatus {
    Available
    Sold
}

model PurchaseOrder {
  ID            Int            @id @default(autoincrement())
  Description   String?
  InvoiceURL    String
  HasPaid   Boolean @default(false)
  DatePaid      DateTime?
  HasReceived   Boolean @default(false)
  DateReceived  DateTime?
  PurchaseItems PurchaseItem[]
  PurchaseCosts PurchaseCost[]
}

model PurchaseItem {
  ID              Int           @id @default(autoincrement())
  PurchaseOrder   PurchaseOrder @relation(fields: [PurchaseOrderID], references: [ID])
  PurchaseOrderID Int
  Title           String
  Cost            Float
  Items           Item[]
}

model PurchaseCost {
    ID              Int           @id @default(autoincrement())
    PurchaseOrder   PurchaseOrder @relation(fields: [PurchaseOrderID], references: [ID])
    PurchaseOrderID Int
    Description String
    Type    String
    Rate    Float
    Cost    Float
}

model FulfillmentRecord {
    ID              Int           @id @default(autoincrement())
    Items           Item[]
    FulfillmentOrderID String
}